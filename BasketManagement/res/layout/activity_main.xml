	            <TextView android:id="@+id/tv_poss_A"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:text="Possessions" />
	            <TextView android:id="@+id/tv_poss_A_num"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="5"
	                android:text="0"
	                android:gravity="center" />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
	            <TextView android:id="@+id/tv_tt_A"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:text="Tir tenté" />
	            <TextView android:id="@+id/tv_tt_A_num"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="5"
	                android:text="0"
	                android:gravity="center" />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
	            <TextView android:id="@+id/tv_tm_A"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:text="Tir marqué" />
	            <TextView android:id="@+id/tv_tm_A_num"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="5"
	                android:text="0"
	                android:gravity="center" />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
	            <TextView android:id="@+id/tv_ro_A"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:text="Rebond Off" />
	            <TextView android:id="@+id/tv_ro_A_num"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="5"
	                android:text="0"
	                android:gravity="center" />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
	            <TextView android:id="@+id/tv_rd_A"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:text="Rebond Def" />
	            <TextView android:id="@+id/tv_rd_A_num"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="5"
	                android:text="0"
	                android:gravity="center" />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
	            <TextView android:id="@+id/tv_int_A"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:text="Interceptions" />
	            <TextView android:id="@+id/tv_int_A_num"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="5"
	                android:text="0"
	                android:gravity="center" />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
	            <TextView android:id="@+id/tv_bp_A"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:text="Ballons perdus" />
	            <TextView android:id="@+id/tv_bp_A_num"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="5"
	                android:text="0"
	                android:gravity="center" />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
	            <TextView android:id="@+id/tv_lft_A"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:text="LF tenté" />
	            <TextView android:id="@+id/tv_lft_A_num"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="5"
	                android:text="0"
	                android:gravity="center" />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
	            <TextView android:id="@+id/tv_lfm_A"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:text="LF marqué" />
	            <TextView android:id="@+id/tv_lfm_A_num"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="5"
	                android:text="0"
	                android:gravity="center" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >
            <TextView 
                android:id="@+id/tv_teamB"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Team B"
                android:textStyle="bold"
                android:gravity="center_horizontal"/>
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
	            <TextView android:id="@+id/tv_poss_B_num"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="5"
	                android:text="0"
	                android:gravity="center" />
	            <TextView android:id="@+id/tv_poss_B"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:text="Possessions"
	                android:gravity="right" />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
	            <TextView android:id="@+id/tv_tt_B_num"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="5"
	                android:text="0"
	                android:gravity="center" />
	            <TextView android:id="@+id/tv_tt_B"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:text="Tir tenté"
	                android:gravity="right" />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
	            <TextView android:id="@+id/tv_tm_B_num"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="5"
	                android:text="0"
	                android:gravity="center" />
	            <TextView android:id="@+id/tv_tm_B"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:text="Tir marqué"
	                android:gravity="right" />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
	            <TextView android:id="@+id/tv_ro_B_num"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="5"
	                android:text="0"
	                android:gravity="center" />
	            <TextView android:id="@+id/tv_ro_B"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:text="Rebond Off"
	                android:gravity="right" />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
	            <TextView android:id="@+id/tv_rd_B_num"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="5"
	                android:text="0"
	                android:gravity="center" />
	            <TextView android:id="@+id/tv_rd_B"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:text="Rebond Def"
	                android:gravity="right" />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
	            <TextView android:id="@+id/tv_int_B_num"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="5"
	                android:text="0"
	                android:gravity="center" />
	            <TextView android:id="@+id/tv_int_B"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:text="Interceptions"
	                android:gravity="right" />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
	            <TextView android:id="@+id/tv_bp_B_num"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="5"
	                android:text="0"
	                android:gravity="center" />
	            <TextView android:id="@+id/tv_bp_B"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:text="Ballons perdus"
	                android:gravity="right" />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
	            <TextView android:id="@+id/tv_lft_B_num"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="5"
	                android:text="0"
	                android:gravity="center" />
	            <TextView android:id="@+id/tv_lft_B"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:text="LF tenté"
	                android:gravity="right" />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
	            <TextView android:id="@+id/tv_lfm_B_num"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="5"
	                android:text="0"
	                android:gravity="center" />
	            <TextView android:id="@+id/tv_lfm_B"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:text="LF marqué"
	                android:gravity="right" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    
</RelativeLayout>
